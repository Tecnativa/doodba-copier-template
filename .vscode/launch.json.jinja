{%- import "_macros.jinja" as macros -%}
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run in debug mode and attach",
      "type": "python",
      "request": "attach",
      "preLaunchTask": "Start project in debug mode",
      "postDebugTask": "Stop project",
      "pathMappings": [
        {
          "localRoot": "${workspaceRoot}/odoo",
          "remoteRoot": "/opt/odoo"
        }
      ],
      "port": {{ macros.version_major(odoo_version) }}899,
      "host": "localhost"
