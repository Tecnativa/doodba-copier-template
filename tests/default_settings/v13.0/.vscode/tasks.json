      "type": "process",
      "command": "python3",
      "args": ["-minvoke", "stop"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
